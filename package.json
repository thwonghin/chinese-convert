{
    "name": "chinese-convert-cli",
    "version": "1.2.0",
    "description": "Command line interface to convert between Chinese text.",
    "repository": "git@github.com:thwonghin/chinese-convert-cli.git",
    "main": "dist/index.js",
    "author": "Hin Wong <thwong.henry@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=14.5.0"
    },
    "scripts": {
        "test:unit": "jest tests/unit",
        "test:integration": "jest tests/integration",
        "clean": "rm -rf dist || true",
        "start": "yarn build && node dist/index.js",
        "build": "tsc",
        "package": "mkdir -p release && pkg . --out-path release",
        "lint": "eslint src --ext .ts --quiet",
        "format": "prettier src/**/*.ts --write"
    },
    "bin": "dist/index.js",
    "pkg": {
        "scripts": "dist/**/*.js"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "fast-glob": "^3.2.4",
        "iconv-lite": "^0.6.2",
        "jschardet": "^2.2.1",
        "yargs": "^15.4.1"
    },
    "devDependencies": {
        "@types/jest": "^26.0.4",
        "@types/node": "^14.0.22",
        "@types/yargs": "^15.0.5",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "axios-mock-adapter": "^1.18.1",
        "eslint": "^7.16.0",
        "eslint-config-airbnb-typescript": "^8.0.2",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^23.18.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.1.0",
        "pkg": "^4.4.9",
        "prettier": "^2.0.5",
        "ts-jest": "^26.1.1",
        "typescript": "^3.9.6"
    },
    "resolutions": {
        "lodash": "4.17.19"
    }
}
