{
    "name": "@thwonghin/chinese-convert",
    "version": "2.0.2",
    "description": "Command line interface to convert between Chinese text.",
    "repository": "git@github.com:thwonghin/chinese-convert.git",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "author": "Hin Wong <thwong.henry@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=18.15.0"
    },
    "scripts": {
        "test:unit": "jest tests/unit",
        "test:integration": "jest tests/integration",
        "clean": "rm -rf dist || true",
        "start": "yarn build && node dist/index.js",
        "build": "tsc",
        "lint": "yarn lint:src && yarn lint:test",
        "lint:script": "eslint --ext ts,tsx",
        "lint:src": "yarn lint:script src",
        "lint:test": "yarn lint:script tests",
        "lint:fix": "yarn lint:src --fix && yarn lint:test --fix",
        "version": "npx conventional-changelog-cli -p chinese-convert -i CHANGELOG.md -s && git add CHANGELOG.md",
        "prepublishOnly": "npm shrinkwrap && yarn build"
    },
    "keywords": [
        "cli",
        "translation",
        "chinese",
        "traditional-chinese",
        "simplified-chinese",
        "zhconvert"
    ],
    "bin": "./dist/index.js",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "/dist/**/*.js",
        "/dist/**/*.d.ts",
        "LICENSE",
        "README.md",
        "package.json",
        "npm-shrinkwrap.json"
    ],
    "dependencies": {
        "axios": "^1.3.4",
        "axios-retry": "^3.4.0",
        "detect-file-encoding-and-language": "^2.3.2",
        "fast-glob": "^3.2.12",
        "iconv-lite": "^0.6.3",
        "lodash": "^4.17.21",
        "split2": "^4.1.0",
        "yargs": "^17.7.0"
    },
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@types/node": "^18.15.0",
        "@types/split2": "^3.2.1",
        "@types/yargs": "^17.0.22",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "axios-mock-adapter": "^1.21.2",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-config-xo": "^0.43.1",
        "eslint-config-xo-typescript": "^0.56.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "prettier": "^2.8.4",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.5"
    },
    "packageManager": "yarn@3.4.1",
    "resolutions": {
        "detect-file-encoding-and-language@^2.3.2": "patch:detect-file-encoding-and-language@npm%3A2.3.2#./.yarn/patches/detect-file-encoding-and-language-npm-2.3.2-d791ada0a7.patch"
    }
}
