{
    "name": "chinese-convert-cli",
    "version": "1.2.0",
    "description": "Command line interface to convert between Chinese text.",
    "repository": "git@github.com:thwonghin/chinese-convert-cli.git",
    "main": "dist/index.js",
    "author": "Hin Wong <thwong.henry@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=14.15.4"
    },
    "scripts": {
        "test:unit": "jest tests/unit",
        "test:integration": "jest tests/integration",
        "clean": "rm -rf dist || true",
        "start": "yarn build && node dist/index.js",
        "build": "tsc",
        "package": "mkdir -p release && pkg . --out-path release",
        "lint": "eslint src --ext .ts --quiet",
        "format": "prettier src/**/*.ts --write"
    },
    "bin": "dist/index.js",
    "pkg": {
        "scripts": "dist/**/*.js"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "fast-glob": "^3.2.4",
        "iconv-lite": "^0.6.2",
        "jschardet": "^2.2.1",
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.20",
        "@types/yargs": "^15.0.12",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "axios-mock-adapter": "^1.19.0",
        "eslint": "^7.17.0",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "pkg": "^4.4.9",
        "prettier": "^2.2.1",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    }
}
