{
    "compilerOptions": {
        "incremental": true,
        "lib": ["ES2020"],
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "./dist",
        "preserveConstEnums": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
